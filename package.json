{
  "name": "copycodeai",
  "displayName": "CopyCode",
  "publisher": "copycode",
  "description": "Copy contents of files to ask something to a LLM",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/yobns/copycode.git"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "icon.png",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "copycode.copyOpenFiles",
        "title": "Copy Open Files"
      },
      {
        "command": "copycode.copyCurrentFile",
        "title": "Copy Current File"
      },
      {
        "command": "copycode.copyAllFiles",
        "title": "Copy All Files"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "copycode.copyOpenFiles",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "copycode.copyCurrentFile",
          "when": "editorTextFocus",
          "group": "navigation"
        },
        {
          "command": "copycode.copyAllFiles",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.89.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  }
}
